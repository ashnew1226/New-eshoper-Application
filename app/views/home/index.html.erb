<section id="slider"><!--slider-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="slider-carousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
						<li data-target="#slider-carousel" data-slide-to="1"></li>
						<li data-target="#slider-carousel" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
					<% if @banners.present? %>
						<% @banners.each_with_index do |banner, i| %>
						<div class="item <%= i == 0 ? "active" : ""%>">
							<div class="col-sm-6">
							<h1><span>E</span>-SHOPPER</h1>
							<h2>Free E-Commerce Template</h2>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
							<button type="button" class="btn btn-default get">Get it now</button>
							</div>
							<div class="col-sm-6">
								<%= image_tag banner.picture[0], class: "girl img-responsive" %>
								<%= image_tag("home/pricing.png",class:"pricing") %>
							</div>
						</div>
						<% end %>
					<% end %>  
					</div>
					<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
						<i class="fa fa-angle-left"></i>
					</a>
					<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
						<i class="fa fa-angle-right"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</section><!--/slider-->
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="left-sidebar">
					<%= render partial: "categories/categories"%>		
					<div class="shipping text-center"><!--shipping-->
						<%= image_tag "home/shipping.jpg" %>
						<%= form_for :filter, url: products_path, method: :get do |form| %>
						<%#= form.select :option, options_for_select(:option, options_for_select([['below - 500', 500], ['below - 1000', 1000], ['below - 3000', 3000], ['below - 5000', 5000], ['below - 10000', 10000]], selected: :option )) %>
							<label>Select Price Below - </label>
							<%= form.select(:option, options_for_select([['select', nil],['below - 500', 500], ['below - 1000', 1000], ['below - 3000', 3000], ['below - 5000', 5000], ['below - 10000', 10000]], selected: :option )) %>
							<label>Select Price Above - </label>
							<%= form.select(:dec_option, options_for_select([['select', nil],['above - 500', 500], ['above - 1000', 1000], ['above - 3000', 3000], ['above - 5000', 5000], ['above - 10000', 10000]], selected: :dec_option )) %>							
							<%= form.submit "Apply-Filter"%>
						<% end %>
					</div>						
				</div>
			</div>
			<%= render "products/products" %>
		</div>
	</div>
</section>