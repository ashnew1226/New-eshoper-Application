    </div>
    <%if session[:cart].empty?%>
    
    <% else %>
    <div class="table-responsive cart_info">
        <table class="table table-condensed">
            <thead>
                <tr class="cart_menu">
                    <td class="image">Item</td>
                    <td class="description"></td>
                    <td class="price">Price</td>
                    <td class="quantity">Quantity</td>
                    <td class="total">Total</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <% @cart.each do |product| %>
                <tr>
                    <td class="cart_product">
                        <a href=""><%= image_tag product.ProductImage,class: "imgsize" %></a>
                    </td>
                    <td class="cart_description">
                        <h4><a href=""><%= product.name %></a></h4>
                        <p>Web ID: 1089772</p>
                    </td>
                    <td class="cart_price">
                        <p><%= product.price %></p>
                    </td>
                    <td class="cart_quantity">
                        <div class="cart_quantity_button flexclass">
                        <%= button_to '+', increase_quantity_path(product), method: :patch, remote: true, class:"cart_quantity_up"  %>

                            <input class="cart_quantity_input" type="text" name="quantity" value="<%= product.quantity %>" autocomplete="off" size="2">
                        <%= button_to '-', decrease_quantity_path(product), method: :patch, remote: false, class:"cart_quantity_down"  %>
                        </div>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price"><%= product.price %></p>
                    </td>
                    <td class="cart_total">
                        <%= link_to remove_from_cart1_path(product),data: {:remote => true, turbo_method: :delete}, class:"cart_total_price1" do %>
                        <i class="fa fa-times"></i>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
            
        </table>
                
    </div>
    <% end %>

