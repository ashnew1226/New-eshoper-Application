<div class="container">
	<div class="row">
		<div class="col-sm-2">
		</div>
		<div class="col-sm-8">
			<div class="contact-form">
      	<div class="status alert alert-success" style="display: none"></div>

        <h2 class="title text-center">Edit Profile</h2>

        <%= form_with(model: @profile, url: profile_path(@profile), method: "patch") do |f|%>
            <% if f.object.errors.any? %>
              <div class="alert alert-danger">
                <% f.object.errors.full_messages.each do |msg| %>
                <div><%= msg %></div>
                <% end %>
              </div>
            <% end %>
          <div class="form-group col-md-12">
            <%= f.label :first_name %><br />
            <%= f.text_field :firstname, autofocus: true,class:"form-control", autocomplete: "firstname",value:current_user.firstname  %>
          </div>
          <div class="form-group col-md-12">
            <%= f.label :last_name %><br />
            <%= f.text_field :lastname, autofocus: true,class:"form-control", autocomplete: "lastname",value:current_user.lastname %>
          </div>
          <div class="form-group col-md-12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email",value:current_user.email %>
          </div>
   
          <div class="actions">
            <%= f.submit "Update",class:'btn btn-primary text-center submit_btn' %>
          </div>
        <% end %>
        </div>
			</div>
		</div>
		<div class="col-sm-2">
		</div>
	</div>
</div>