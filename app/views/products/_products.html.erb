<div class="col-sm-9 padding-right">
	<div class="features_items"><!--products-->
		<h2 class="title text-center">Features Items</h2>
		<% if @products.present? %>
			<% @products.each do |product| %>
				<div class="col-sm-4">
					<div class="product-image-wrapper">
						<div class="single-products">
							<div class="productinfos text-center">
								<%= link_to product_path(product) do%>
									<%= image_tag product.ProductImage %>
								<% end %>
								<h2>â‚¹<%= product.price %></h2>
								<p><%= product.name.truncate(50) %></p>
								<% if @cart.present? && @cart.include?(product) %>
									<i class="fa fa-shopping-cart newfa"><%= link_to "Remove from cart", cart_path(product),class:"btn btn-default add-to-cart removecart",remote: true, data: {turbo_method: :delete} %></i>
								<% else %>
									<i class="fa fa-shopping-cart newfa"><%= link_to "Add to cart", carts_path(id: product),class:"btn btn-default add-to-cart",id:"add_btn",remote: true, data: {turbo_method: :post} %></i>
								<% end %>
							</div>
						</div>
						<div class="choose">
							<ul class="nav nav-pills nav-justified">
								<li><i class="fa fa-plus-square"></i><%= link_to 'Add to wishlist', wishlists_path(id: product), method: :post %></li>
							</ul>
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div><!--products-->					
</div>