<div class="container">
  <h2>Sign up</h2>

<div class="col-sm-8">
  <div class="contact-form">
    <h2 class="title text-center">Get In Touch</h2>
    <div class="status alert alert-success" style="display: none"></div>
  		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
			<% if f.object.errors.any? %>
				<div class="alert alert-danger">
					<% resource.errors.full_messages.each do |msg| %>
					<div><%= msg %></div>
					<% end %>
				</div>
			<% end %>
          <div class="form-group col-md-6">
      		<%= f.text_field :firstname, class:"form-control",placeholder:"First Name" ,autocomplete: false%>
          </div>
          <div class="form-group col-md-12">
              <%= f.text_field :lastname, class:"form-control",placeholder:"Last Name" %>
          </div>
          <div class="form-group col-md-6">
      		<%= f.email_field :email, class:"form-control",placeholder:"Email" %>
          </div>
          <div class="form-group col-md-12">
              <%= f.password_field :password, class:"form-control",placeholder:"password" %>
			<% if @minimum_password_length %>
			<em>(<%= @minimum_password_length %> characters minimum)</em>
			<% end %>
          </div>
		   <div class="form-group col-md-6">
      		<%= f.password_confirmation :password_confirmation, class:"form-control",placeholder:"Email" %>
          </div>
          <div class="form-group col-md-12">
              <%= f.submit "Sign Up", class:"btn btn-primary pull-right" %>
          </div>
  <% end %>
  </div>
    <%= render "devise/shared/links" %>

</div>
</div>

<div class="container">
<div class="row">
	<div class="col-sm-2">
	</div>
	
	<div class="col-sm-2">
	</div>
</div>