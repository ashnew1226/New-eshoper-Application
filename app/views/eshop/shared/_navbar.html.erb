<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="<%= @cms.meta_description %>">
  	<meta name="keywords" content="<%= @cms.meta_keywords %>">
    <meta name="author" content="">
    <title><%= @cms.title %></title>
	<%= stylesheet_link_tag 'bootstrap.min.css' %>
	<%= stylesheet_link_tag 'font-awesome.min.css' %>
	<%= stylesheet_link_tag 'prettyPhoto.css' %>
	<%= stylesheet_link_tag 'price-range.css' %>
	<%= stylesheet_link_tag 'animate.css' %>
	<%= stylesheet_link_tag 'main.css' %>
	<%= stylesheet_link_tag 'responsive.css' %>
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->       
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
	<header id="header"><!--header-->
		<div class="header_top"><!--header_top-->
			<div class="container">
				<div class="row">
					
					</div>
				</div>
			</div>
		</div><!--/header_top-->
		
		<div class="header-middle"><!--header-middle-->
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
                        <%= link_to root_path do %>
							<%= image_tag("home/logo.png", alt: "logo") %>
                        <% end %>
						</div>
						<div class="btn-group pull-right">
							
						</div>
					</div>
					<div class="col-sm-8">
						<div class="shop-menu pull-right">
							<ul class="nav navbar-nav">
								<li><i class="fa fa-star"></i> <%= link_to "Wishlist", wishlists_path ,id: 'cart_id' %></li>
								<li><i class="fa fa-shopping-cart"></i> <%= link_to "Cart", carts_path, id: 'cart_id' %>
								<%if @cart.size == 0 || nil %>
								<% else %>
								<span class="badge badge-light badge-pill" style="padding: 2px 5px;"><%=@cart.size rescue nil %></span>
								<% end %>
								</li>
								<%if user_signed_in? %>
								<% else %>
								<li><%= link_to 'Sign Up', new_user_registration_path,id: 'cart_id' %></li>
								<% end %>
								<li class="dropdown"><a><i class="fa fa-user"></i> Account<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
											<li><%= link_to 'My Order',profile_myorder_path %></li>
											<li><%= link_to 'Track Order',profile_track_order_path %></li> 
											<%if user_signed_in? %>
												<li><%= link_to "Edit Profile",edit_profile_path(current_user.id) %></li>
											<% end %>
									</ul>
								</li> 
								<li><i class="fa fa-lock"></i>
									<% if user_signed_in? %>
										<%= link_to 'Sign Out', destroy_user_session_path, data: {:turbo_method => :delete},id: 'cart_id' %>
										<% else %>
										<%= link_to 'Sign In', new_user_session_path,id: 'cart_id' %>
									<% end %>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->
	
		<div class="header-bottom"><!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><%= link_to "Home",root_path %></li>
								<li class="dropdown"><a href="#">Shop<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><%= link_to 'Products', products_path %></li>
										<li><%= link_to "Cart", carts_path %></li> 
                                    </ul>
                                </li> 
								<li class="dropdown"><a href="#">Blog<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><%= link_to 'Blog List',blogs_path %></li>
                                    </ul>
                                </li> 
                                        <li><%= link_to 'Contact',new_contact_path %></li>
							</ul>
						</div>
					</div>
					<%# #search bar %>
					<!--<div class="col-sm-3">
						<div class="search_box pull-right">
							<input type="text" placeholder="Search"/>
						</div>
					</div>-->
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->

	