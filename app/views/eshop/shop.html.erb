
	<section id="advertisement">
		<div class="container">
			<%= image_tag("shop/advertisement.jpg") %>
		</div>
	</section>
	
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
    					<%= render partial: "eshop/shared/sidebar"%>
							<div class="brands_products">
							<h2>Brands</h2>
							<div class="brands-name">
								<ul class="nav nav-pills nav-stacked">
									<li><a href=""> <span class="pull-right">(50)</span>Acne</a></li>
									<li><a href=""> <span class="pull-right">(56)</span>Grüne Erde</a></li>
									<li><a href=""> <span class="pull-right">(27)</span>Albiro</a></li>
									<li><a href=""> <span class="pull-right">(32)</span>Ronhill</a></li>
									<li><a href=""> <span class="pull-right">(5)</span>Oddmolly</a></li>
									<li><a href=""> <span class="pull-right">(9)</span>Boudestijn</a></li>
									<li><a href=""> <span class="pull-right">(4)</span>Rösch creative culture</a></li>
								</ul>
							</div>
						</div><!--/brands_products-->
						
						<div class="price-range"><!--price-range-->
							<h2>Price Range</h2>
							<div class="well">
								 <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2" ><br />
								 <b>$ 0</b> <b class="pull-right">$ 600</b>
							</div>
						</div><!--/price-range-->
						
						<div class="shipping text-center"><!--shipping-->
							<%= image_tag("home/shipping.jpg") %>
						</div><!--/shipping-->
						
					</div>
				</div>
				
				<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Features Items</h2>
						<% if @products.present? %>
							<% @products.each do |product| %>
								<div class="col-sm-4">
									<div class="product-image-wrapper">
										<div class="single-products">
											<div class="productinfo text-center">
												<%= image_tag product.ProductImage %>
												<h2><%= product.price %></h2>
												<p><%= product.name %></p>
												<% if @cart.present? && @cart.include?(product) %>
													<i class="fa fa-shopping-cart"></i><%= link_to "Remove from cart", remove_from_cart_path(product),class:"btn btn-default add-to-cart", data: {turbo_method: :delete} %>
												<% else %>
													<i class="fa fa-shopping-cart"></i><%= link_to "Add to cart", add_to_cart_path(product),class:"btn btn-default add-to-cart", data: {turbo_method: :post} %>
												<% end %>											</div>
										</div>
										<div class="choose">
											<ul class="nav nav-pills nav-justified">
												<li><i class="fa fa-plus-square"></i><%= link_to 'Add to wishlist', wishlist_path(product) %></li>
												<li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
											</ul>
										</div>
									</div>
								</div>
							<% end %>
						<% end %>
						
						<ul class="pagination">
							<li class="active"><a href="">1</a></li>
							<li><a href="">2</a></li>
							<li><a href="">3</a></li>
							<li><a href="">&raquo;</a></li>
						</ul>
					</div><!--features_items-->
				</div>
			</div>
		</div>
	</section>
	
