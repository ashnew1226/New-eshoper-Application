
	<section id="advertisement">
		<div class="container">
			<%= image_tag("shop/advertisement.jpg") %>
		</div>
	</section>
	
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
    					<%= render partial: "eshop/shared/sidebar"%>
							<div class="brands_products">
							
						</div><!--/brands_products-->						
					</div>
				</div>
				
				<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Products</h2>
						<% if @products.present? %>
							<% @products.each do |product| %>
								<div class="col-sm-4">
									<div class="product-image-wrapper">
										<div class="single-products">
											<div class="productinfo text-center">
												<%= image_tag product.ProductImage %>
												<h2><%= product.price %></h2>
												<p><%= product.name.truncate(70) %></p>
												<% if @cart.present? && @cart.include?(product) %>
													<i class="fa fa-shopping-cart newfa"></i><%= link_to "Remove from cart", remove_from_cart_path(product),class:"btn btn-default add-to-cart",id:"cart_id", data: {turbo_method: :delete} %>
												<% else %>
													<i class="fa fa-shopping-cart newfa"></i><%= link_to "Add to cart", add_to_cart_path(product),class:"btn btn-default add-to-cart",id:"cart_id", data: {turbo_method: :post} %>
												<% end %>											</div>
										</div>
										<div class="choose">
											<ul class="nav nav-pills nav-justified">
												<li><i class="fa fa-plus-square"></i><%= link_to 'Add to wishlist', wishlist_path(product) %></li>
											</ul>
										</div>
									</div>
								</div>
							<% end %>
						<% end %>

					</div><!--features_items-->
				</div>
			</div>
		</div>
	</section>
	
