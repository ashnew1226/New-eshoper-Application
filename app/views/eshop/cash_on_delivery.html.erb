<div class=" container table-responsive cart_info">
    <h2 class="text_center">Cash On Delivary </h2>
    <table class="table table-condensed">
        <thead>
            <% @cart.each do |product| %>
            <tr>
                <td class="cart_product">
                    <a href=""><%= image_tag product.ProductImage,class: "imgsize" %></a>
                </td>
                <td class="cart_description">
                    <h4><a href=""><%= product.name %></a></h4>
                </td>
                <td class="cart_price">
                    <p><%= product.price %></p>
                </td>
                <% end %>
        </thead>
    </table>

        <table>
        <p class="total-price" style = "float: right;margin-right: 50px;">Total - <%= @total_amount %> </p>
        <thead>
            <tr>
                <td>
                    <div class="user_address" style="font-size: 22px;">
                    <h3>Shipping Address</h3>
                    <strong><%=current_user.email %></strong>
                    <% @newaddress.each do |address| %>
                    <% check_box( "select address", address, { multiple: true }, nil) %>
                    <%= address %>
                    <% end %>
                    </div>
                </td>
            </tr>
        </thead>
    </table>
