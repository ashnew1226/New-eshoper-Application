
	 <div id="contact-page" class="container">
    	<div class="bg">
	    	<div class="row">    		
	    		<div class="col-sm-12">    			   			
					<h2 class="title text-center">Contact <strong>Us</strong></h2>    			    				    				
					<div id="gmap" class="contact-map">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3781.891602241529!2d73.7378469154686!3d18.578925087375143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2bbc1aaaaaaab%3A0x316090d140dfd0b3!2sNeoSOFT!5e0!3m2!1sen!2sin!4v1673585459306!5m2!1sen!2sin" width="1150" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
					</div>
				</div>			 		
			</div>    	
    		<div class="row" style="margin-top: 50px;">  	
	    		<div class="col-sm-8">
	    			<div class="contact-form">
	    				<h2 class="title text-center">Get In Touch</h2>
	    				<div class="status alert alert-success" style="display: none"></div>
						<%= form_with model: @contact,url: eshop_contact_us_path, turbo_method: :post, remote: true,data: {turbo: false},class:"contact-form row" do |form| %>
							<%# binding.pry %>
							<% if form.object.errors.any? %>
								<div class="alert alert-danger">
									<% form.object.errors.full_messages.each do |msg| %>
									<div><%= msg %></div>
									<% end %>
								</div>
							<% end %>
				            <div class="form-group col-md-6">
								<%= form.text_field :name, class:"form-control",placeholder:"Name", value: ""%>
				            </div>
				            <div class="form-group col-md-6">
								<%= form.text_field :email, class:"form-control",placeholder:"Email" %>
				            </div>
				            <div class="form-group col-md-12">
				                <%= form.number_field :contact_no, class:"form-control",placeholder:"Contact Number", pattern: "[1-9]{1}[0-9]{9}" %>
				            </div>
				            <div class="form-group col-md-12">
				                <%= form.text_area :message, class:"form-control",placeholder:"Message" %>
				            </div>
				            <div class="form-group col-md-12">
				                <%= form.submit "Submit", class:"btn btn-primary pull-right" %>
				            </div>
						<% end %>
	    			</div>
	    		</div>
	    		<div class="col-sm-4">
	    			<div class="contact-info">
	    				<h2 class="title text-center">Customer Queries</h2>
						<%# binding.pry %>
						<% if current_user.present? && @contact_detail.present? %>
							<p><strong><%=@contact_detail.last.name%></strong>: <%= @contact_detail.last.message %></p>
							<% if @contact_detail.last.note_admin %>
							<p><strong>Admin</strong>: <%= @contact_detail.last.note_admin %></p>
							<% end %>
						<% end %>
	    				<div class="social-networks">
	    					<h2 class="title text-center">Social Networking</h2>
							<ul>
								<li>
									<a href="#"><i class="fa fa-facebook"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-twitter"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-google-plus"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-youtube"></i></a>
								</li>
							</ul>
	    				</div>
	    			</div>
    			</div>    			
	    	</div>  
    	</div>	
    </div><!--/#contact-page-->
