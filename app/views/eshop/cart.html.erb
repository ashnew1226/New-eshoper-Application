
<section id="cart_items">
	<div class="container">
		<div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li class="active">Shopping Cart</li>
			</ol>
		</div>
		<%if session[:cart].empty?%>
		<p>Please add product...<%= link_to "click here",root_path %> to add products</p>
		<% else %>
		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead>
					<tr class="cart_menu">
						<td class="image">Item</td>
						<td class="description">Description</td>
						<td class="price">Price</td>
						<td class="quantity">Quantity</td>
						<td class="total">Total</td>
					</tr>
				</thead>
					<% @cart.each do |product| %>
				<tbody>
					<tr>
						<td class="cart_product">
							<a href=""><%= image_tag product.ProductImage,class: "imgsize" %></a>
						</td>
						<td class="cart_description">
							<h4><a href=""><%= product.name %></a></h4>
							<p>Web ID: 1089772</p>
						</td>
						<td class="cart_price">
							<p><%= product.price %></p>
						</td>
						<td class="cart_quantity">
							<div class="cart_quantity_button flexclass">
							<%= button_to '+',increase_quantity_path(product), turbo_method: :post,class:"cart_quantity_up", id: "addcart"  %>

								<input class="cart_quantity_input" type="text" name="quantity" value="<%= product.quantity %>" id="number" autocomplete="off" size="2">
							<%= button_to '-', decrease_quantity_path(product), turbo_method: :post, class:"cart_quantity_down"  %>
							</div>
						</td>
						<td class="cart_total">
							<p class="cart_total_price"><%= tp = product.price*product.quantity %></p>
						</td>
						<td class="cart_delete" style="padding:11px;">
							<%= link_to remove_from_cart1_path(product),data: {:remote => true, turbo_method: :delete}, class:"cart_quantity_delete" do %>
								<i class="fa fa-times"></i>
							<% end %>
						</td>
					</tr>
				</tbody>
			<% end %>
			</table>
		</div>
	</div>
</section> <!--/#cart_items-->

<section id="do_action">
	<div class="container">
		<div class="heading">
			<h3>What would you like to do next?</h3>
			<p>Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.</p>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="chose_area">

				<%= form_with model: @coupon, url: coupons_path,  local: true,data: { turbo: false } do |form| %>
					<ul class="user_option">
						<li>
						<div class="mb-3">
							<%= form.label :coupon_code %>
							<%= form.text_field :code, class: "form-control" , placeholder: "enter coupon code" %>
						</div>
						</li>
						<li>
						<div class="mb-3">
							<%= form.submit "Apply", class: "btn btn-primary" %>
						</div>
						</li>
					</ul>
					<% end %>
				
					
				</div>
			</div>
			<div class="col-sm-6">
				<div class="total_area">
					<ul>
						<li>Cart Sub Total <span><%= @produts_price %></span></li>
						<% if @percent_off.present? %>
							<li>Coupon Off <span>-<%= @percent_off %></span></li>
						<% else %>
							<li>Coupon Off <span><%= @percent_off = 0 %></span></li>
						<% end %>
						<% if @applied_shipping_charge.present? && @produts_price > 0 %>
							<li>Shipping Charge <span><%= @shipping_charge %></span></li>

						<% else %>
							<li>Shipping Charge <span>Free</span></li>
						<% end %>
						<% if @total.present? && @total > 25 %>
							<li>Total <span><%= @total  %></span></li>
						
						<% else @products_price.present? && @products_price > 25 %>
						<li>Total <span><%= @products_price %></span></li>

						<% end %>
					</ul>
					<%#= form_with  url: apply_coupon_path, method: :post do |f| %>
						<%# if @total.present? %>
							<%#= f.hidden_field :price,:value=>@total, autocomplete: 'off' %>
						<%# else %>	
						<%# <%= @total %>
							<%#= f.hidden_field :price,:value=>@products_price, autocomplete: 'off' %>
						<%# end %>
						<%#= f.submit "Checkout",class:"btn btn-default check_out" %>
					<%# end %>
					<% if @cp.present? %>
						<%= link_to "Checkout", eshop_checkout_path(coupon: @cp), class:"btn btn-default check_out"%>
					<% else %>
						<%= link_to "Checkout", eshop_checkout_path, class:"btn btn-default check_out"%>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section><!--/#do_action-->

<% end %>
			